<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        This rule grants read access to all internal users on the hr.employee model.
        This is necessary for reports that need to access employee fields (like name, signature, etc.)
        when generated by non-HR users. Without this, Odoo would try to read from hr.employee.public, causing an error.
    -->
    <record id="access_hr_employee_for_correspondence_reports" model="ir.model.access">
        <field name="name">hr.employee.read access for correspondence reports</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>