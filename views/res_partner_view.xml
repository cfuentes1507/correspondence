<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_correspondence" model="ir.ui.view">
            <field name="name">res.partner.form.correspondence</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="before">
                        <h4>Descripcion del Cargo</h4>
                    <field string="Descripcion del Cargo" name="director_description" placeholder="Añada la descripción o cargo del director aquí..."/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>