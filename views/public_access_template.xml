<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="public_correspondence_template" name="Página Pública de Correspondencia">
        <t t-call="website.layout">
            <div id="wrap" class="container my-4">
                <div class="oe_structure">
                    <div class="page">
                        <h1 class="mb-3">Detalles de la Correspondencia</h1>
                        <hr/>
                        <div class="row">
                            <div class="col-lg-8">
                                <p><strong>Correlativo:</strong> <span t-esc="doc.correlative"/></p>
                                <p><strong>Asunto:</strong> <span t-esc="doc.name"/></p>
                                <p><strong>Fecha:</strong> <span t-field="doc.date"/></p>
                                <p><strong>Departamento Remitente:</strong> <span t-field="doc.send_department_id.name"/></p>
                                <p><strong>Departamentos Destinatarios:</strong> <span t-esc="', '.join(doc.recipient_department_ids.mapped('name'))"/></p>
                            </div>
                            <div class="col-lg-4 text-center">
                                <t t-if="doc.document_file">
                                    <h4 class="mb-3">Documento Firmado</h4>
                                    <a t-attf-href="/web/content/correspondence_document/{{doc.id}}/document_file?download=true" class="btn btn-primary">
                                        <i class="fa fa-download"/> Descargar Documento
                                    </a>
                                    <p class="text-muted mt-2"><small>Haga clic para descargar el archivo firmado.</small></p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>