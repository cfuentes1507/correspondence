<odoo>
  <data>
    <record model="ir.actions.act_window" id="correspondence_action">
      <field name="name">Todas las Correspondencias</field>
      <field name="res_model">correspondence_document</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="correspondence_action_received">
      <field name="name">Correspondencia Recibida</field>
      <field name="res_model">correspondence_document</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('recipient_department_ids', '!=', False), ('state', 'in', ['sent', 'read'])]</field>
      <field name="context">{'default_recipient_department_ids': 'search_default_my_department', 'create': False}</field>
    </record>

    <record model="ir.actions.act_window" id="correspondence_action_sent">
      <field name="name">Correspondencia Enviada</field>
      <field name="res_model">correspondence_document</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('author_id', '=', uid)]</field>
    </record>

    <record model="ir.actions.act_window" id="department_action">
      <field name="name">Departamentos</field>
      <field name="res_model">correspondence_department</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="type_action">
      <field name="name">Tipos de Correspondencia</field>
      <field name="res_model">correspondence_type</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Correspondencia" id="correspondence_menu" action="correspondence_action"/>

    <!-- Correspondence menu item -->
    <menuitem name="Correspondencia" id="correspondence" parent="correspondence_menu"
              sequence="1"/>
    <menuitem name="Enviadas" id="correspondence_menu_send" parent="correspondence"
              action="correspondence_action_sent"/>
    <menuitem name="Recibidas" id="correspondence_menu_received" parent="correspondence"
              action="correspondence_action_received" />
    <!-- Configuracion menu item -->
    <menuitem name="Configuracion" id="correspondence_menu_config" parent="correspondence_menu" sequence="2" groups="correspondence.correspondence_group_admin"/>
    <menuitem name="Departamentos" id="correspondence_menu_config_department" parent="correspondence_menu_config"
              action="department_action"/>
    <menuitem name="Tipos de Correspondencia" id="correspondence_menu_config_type" parent="correspondence_menu_config"
              action="type_action"/>

    <!-- actions -->
<!--
    <menuitem name="List" id="web_drivers.menu_1_list" parent="web_drivers.menu_1"
              action="web_drivers.action_window"/>
    <menuitem name="Server to list" id="web_drivers" parent="web_drivers.menu_2"
              action="web_drivers.action_server"/>
-->
  </data>
</odoo>