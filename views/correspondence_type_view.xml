<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="correspondence_type_view_form" model="ir.ui.view">
        <field name="name">correspondence.type.form</field>
        <field name="model">correspondence_type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Correspondencia">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="prefix"/>
                        </group>
                        <group>
                            <field name="report_action_id"
                                    domain="[('model', '=', 'correspondence_document'), ('report_type', '=', 'qweb-pdf')]"
                                    context="{'default_model': 'correspondence_document', 'default_report_type': 'qweb-pdf'}"/>
                            <button name="action_preview_report" type="object" string="Previsualizar" class="oe_link" attrs="{'invisible': [('report_action_id', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>