<odoo>
    <data>
        <record id="correspondence_document_view_form" model="ir.ui.view">
            <field name="name">correspondence_document.form</field>
            <field name="model">correspondence_document</field>
            <field name="arch" type="xml">
                <form string="Documento de Correspondencia">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Asunto del documento"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="correlative"/>
                                <field name="author_id" invisible="1"/>
                                <field name="send_department_id"/>
                                <field name="recipient_department_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="correspondence_type"/>
                                <field name="state" widget="statusbar" readonly="1" statusbar_visible="draft,signed,sent,read"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n">
                                <field name="descripcion"/>
                            </page>
                            <page string="Observaciones">
                                <field name="observaciones"/>
                            </page>
                            <page string="Adjuntos" name="attachments">
                                <group>
                                    <field name="document_file" filename="file_name"/>
                                    <field name="file_name" invisible="1"/>
                                </group>
                            </page>
                            <page string="Respuestas">
                                <field name="child_document_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="correspondence_document_view_tree" model="ir.ui.view">
            <field name="name">correspondence_document.tree</field>
            <field name="model">correspondence_document</field>
            <field name="arch" type="xml">
                <tree string="Correspondencia">
                    <field name="correlative"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="send_department_id"/>
                    <field name="recipient_department_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="correspondence_document_view_search" model="ir.ui.view">
            <field name="name">correspondence_document.search</field>
            <field name="model">correspondence_document</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Mi Departamento" name="my_department" context="{'group_by': 'recipient_department_id'}"/>
                    <separator/>
                    <field name="recipient_department_id" string="Departamento Destinatario"/>
                </search>
            </field>
        </record>
    </data>
</odoo>