<odoo>
    <data>
        <record id="correspondence_document_view_form" model="ir.ui.view">
            <field name="name">correspondence_document.form</field>
            <field name="model">correspondence_document</field>
            <field name="arch" type="xml">
                <form string="Documento de Correspondencia">
                    <header>
                        <button name="action_generate_report" string="Generar Archivo" type="object" states="draft,signed" class="btn-secondary"/>
                        <button name="action_sign" string="Subir Documento Firmado" type="object" states="draft,signed" class="oe_highlight"/>
                        <field name="is_current_user_recipient" invisible="1"/>
                        <field name="already_read_by_my_department" invisible="1"/>
                        <button name="action_send" string="Enviar" type="object" states="signed" class="oe_highlight"/>
                        <button name="action_read" string="Marcar como Leído" type="object" states="sent" class="btn-secondary" attrs="{'invisible': ['|', ('is_current_user_recipient', '=', False), ('already_read_by_my_department', '=', True)]}"/>
                        <button name="action_reply" string="Responder" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('is_current_user_recipient', '=', False), ('state', '!=', 'sent')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,signed,sent,replied"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Asunto del documento" attrs="{'readonly': [('state', '!=', 'draft')]}"/></h1>
                        </div>
                        <group attrs="{'invisible': [('parent_document_id', '=', False)]}">
                            <field string="En respuesta a:" name="parent_document_id" readonly="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="correlative" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="author_id" invisible="1"/>
                                <field name="send_department_id"/>
                                <field name="recipient_department_ids" options="{'no_create': True, 'no_open': True}" widget="many2many_tags" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('id', '!=', send_department_id)]"/>
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="correspondence_type" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción">
                                <div style="border: 1px solid #ccc; border-radius: 5px; padding: 0px;">
                                    <field name="descripcion" attrs="{'readonly': [('state', 'not in', ['draft', 'signed'])]}"/>
                                </div>
                            </page>
                            <page string="Observaciones">
                                <field name="observaciones" attrs="{'readonly': [('state', 'not in', ['draft', 'signed'])]}"/>
                            </page>
                            <page string="Adjuntos" name="attachments">
                                <group>
                                    <field name="document_file" filename="file_name" attrs="{'readonly': [('state', 'not in', ['draft', 'signed'])]}"/>
                                    <field name="file_name" invisible="1"/>
                                </group>
                            </page>
                            <page string="Respuestas">
                                <field name="child_document_ids" force_save="1" attrs="{'readonly': ['&amp;', ('state', '!=', 'draft'), ('is_current_user_recipient', '=', False)]}">
                                </field>
                            </page>
                            <page string="Estado de Lectura" name="read_status">
                                <field name="read_status_ids" readonly="1">
                                    <tree><field name="department_id"/><field name="read_by_user_id"/><field name="read_date"/></tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="correspondence_document_view_tree" model="ir.ui.view">
            <field name="name">correspondence_document.tree</field>
            <field name="model">correspondence_document</field>
            <field name="arch" type="xml">
                <tree string="Correspondencia">
                    <field name="correlative"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="send_department_id"/>
                    <field name="recipient_department_ids" widget="many2many_tags"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="correspondence_document_view_search" model="ir.ui.view">
            <field name="name">correspondence_document.search</field>
            <field name="model">correspondence_document</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Mi Departamento" name="my_department" context="{'my_department_filter': True}"/>
                    <separator/>
                    <field name="recipient_department_ids" string="Departamento Destinatario"/>
                </search>
            </field>
        </record>
    </data>
</odoo>