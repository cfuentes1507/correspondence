<odoo>
    <data>
        <record model="ir.ui.view" id="correspondence_department_view_form">
            <field name="name">correspondence_department.form</field>
            <field name="model">correspondence_department</field>
            <field name="arch" type="xml">
                <form string="Departamento">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="current_director_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Usuarios">
                                <field name="user_ids"/>
                            </page>
                            <page string="Historial de Directores">
                                <field name="director_history_ids">
                                    <tree editable="bottom"><field name="director_id"/><field name="date_start"/><field name="date_end"/></tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>